{
  "name": "excalidraw-desktop",
  "productName": "Excalidraw Desktop",
  "version": "0.0.2",
  "description": "A desktop application for Excalidraw, built with Electron and Vite.",
  "main": "./out/main/index.js",
  "author": "Rishan Reddy",
  "homepage": "https://github.com/rishan-reddy/excalidraw-desktop",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux --publish never"
  },
  "build": {
    "npmRebuild": false
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@excalidraw/excalidraw": "^0.18.0",
    "@tailwindcss/vite": "^4.1.10",
    "electron-debug": "^4.1.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.3.9",
    "lucide-react": "^0.514.0",
    "react-form-stepper": "^2.0.3",
    "react-router-dom": "^7.6.2",
    "sonner": "^2.0.5",
    "tailwindcss": "^4.1.10"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config": "^2.0.0",
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^35.1.5",
    "electron-builder": "^25.1.8",
    "electron-devtools-installer": "^4.0.0",
    "electron-vite": "^3.1.0",
    "eslint": "^9.24.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "vite": "^6.2.6"
  }
}
